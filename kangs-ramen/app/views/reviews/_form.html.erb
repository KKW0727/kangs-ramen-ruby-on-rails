<div class = "review_container">
<h1>Kang'sラーメンのレビュー作成</h1>
<%= form_for @review do |f| %>
<section class = "new_review_form">
<article>
<h3>イメージ</h3>
<% if @review.image.attached? %>
<% @review.image.each do |image| %>
<%= check_box_tag "image_ids[]", image.id %>
<%= image_tag image, size:12*12 %>
<% end %>
<% end %>
<%=f.file_field :image, multiple: true %>
</article>
<article>
<h3>コメント</h3>
<%=f.text_area :comment, class: :input_commnet %>
</article>
<%=f.submit "作成する", class: :submit_btn %>
</section>
<% end %>
</div>

<style>
    .review_container {
        padding-top: 50px;
        max-width: 800px;
        margin: 0 auto;
    }

    .review_container h1 {
        text-align: center;
    }

    .new_review_form {
        width: 540px;
        height: 500px;
        margin: 0 auto;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    .input_commnet { 
        width: 100%;
        height: 200px;
        resize: none;
        outline: none;
    }

    .submit_btn {
        background: #ffc0cb;
        border: none;
        padding: 8px 12px;
        border-radius: 8px;
    }

    .submit_btn:hover {
        opacity: 0.8;
    }
</style>